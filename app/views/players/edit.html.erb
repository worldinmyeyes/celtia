<div class="container">
	<ol class="breadcrumb">
	  <li><a href="/">Home</a></li>
	  <li><%= link_to "#{@player.username}'s Profile", @player %></li>
	  <li class="active">Edit details</li>
	</ol>
	<div class="col-md-6 col-md-offset-3">
		<div class="panel panel-default">
		<div class="panel-heading">Update your profile</div>
		<div class="panel-body">
			<%= form_for(@player) do |f| %>
			<% if @player.errors.any? %>
			    <div class="alert alert-error">
			      <strong>A few errors...</strong>
			      <ul>
			        <% @player.errors.full_messages.each do |message| %>
			          <li><%= message %></li>
			        <% end %>
			      </ul>
			    </div>
			    <br/>
			<% end %>
			<div class="form-group">
				<%= f.label :'username', :class => "control-label" %>
				<%= f.text_field :username, :placeholder => "Username", :class => "form-control" %>
			</div>
			<div class="form-group">
				<%= f.label :'email', :class => "control-label" %>
				<%= f.text_field :email, :placeholder => "Email", :type => "email", :class => "form-control" %>
			</div>
			<div class="form-group">
				<%= f.label :'password', :class => "control-label" %>
				<%= f.password_field :password, :placeholder => "Password", :class => "form-control" %>
			</div>
			<div class="form-group">
				<%= f.label :'password_confirmation', :class => "control-label" %>
				<%= f.password_field :password_confirmation, :placeholder => "Confirm Password", :class => "form-control" %>
			</div>
			<p align="right">
				<%= link_to "Cancel", @player, :class => "btn btn-default" %>
				<%= f.submit "Save changes", class: "btn btn-success" %>
			</p>
			<% end %>
		</div>
	</div>
	</div>
</div>
