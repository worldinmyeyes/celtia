<div class="container">
<ol class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li class="active">Register</li>
</ol>
<div class="col-md-6 col-md-offset-3">

<div class="panel panel-default">
<div class="panel-heading">Register for Celtia!</div>
<div class="panel-body">
<%= form_for @player do |f| %>
         <% if @player.errors.any? %>
         <div class="alert alert-alert">
            <strong>Form is invalid</strong>
            <ul>
                <% @player.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
            </ul>
        </div>
        <br/>
        <% end %>
        <div class = "form-group">
        	<%= f.label :email %>
			<%= f.text_field :email, :placeholder => "Enter your email", :class => "form-control" %>
        </div>
        <div class = "form-group">
        	<%= f.label :username %>
			<%= f.text_field :username, :placeholder => "Enter your username", :class => "form-control" %>
        </div>
        <div class = "form-group">
			<%= f.label :password %>
			<%= f.password_field :password, :placeholder => "Enter your password", :class => "form-control" %>
        </div>
        <div class = "form-group">
			<%= f.label :password_confirmation %>
			<%= f.password_field :password_confirmation, :placeholder => "Enter your password again", :class => "form-control" %>
        </div>
        <p align="right">
        <%= submit_tag("Reset", { :name => 'reset', :class => 'btn btn-default', :type => "reset" }) %>
        <%= f.submit 'Register', :class => "btn btn-success" %>
        </p>
<% end %>
</div>
</div>
</div>
</div>