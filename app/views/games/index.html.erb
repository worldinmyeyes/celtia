<style type="text/css">
  .header a {
      color:#ffffff;
      /*font-size:10px;*/
      text-decoration: none;
      opacity: 0.7;
      /*transition:opacity 0.2s;*/
      &:hover {
      opacity: 1;
      color: #fff;
      text-decoration: none;
      }
  }

  .content {
    display: block;
    position: relative;
    float: left;
  }

  body {
    font-family: 'Open Sans', sans-serif !important;
    font-weight: 400;
    text-rendering: optimizelegibility;
    background-color: #EDF5EB; 
  }

  ul {
    list-style: none;
    -webkit-padding-start: 0;
    -moz-padding-start: 0;
    padding-start: 0;
  }
  .btn {
    opacity: 1;
  }
</style>
<div class="container">
<h1>List of current games <span class="small text-muted">by <% if @owner %><%= @owner.username %><% else %>everyone<% end %></span></h1>
<div class="panel panel-default">
  <div class="panel-heading"><strong>2 player games</strong></div>
  <% if @games2.size == 0 %>
    <div class="panel-body">
      No on going games found.
    </div>
  <% else %>
    <table class="table table-bordered">
      <tr>
        <th>Owner</th>
        <th>Red</th>
        <th>White</th>
        <th></th>
      </tr>
    <% @games2.each do |game| %>
      <tr>
        <td><%= game.owner %></td>
        <td><%= game.red %></td>
        <td><%= game.green %></td>
        <td><%= link_to 'Enter', game %></td>
      </tr>
    <% end %>
    </table>
  <% end %>
</div>
<div class="panel panel-default">
  <div class="panel-heading"><strong>3 player games</strong></div>
  <% if @games3.size == 0 %>
    <div class="panel-body">
      No on going games found.
    </div>
  <% else %>
    <table class="table table-bordered">
      <tr>
        <th>Owner</th>
        <th>Red</th>
        <th>White</th>
        <th>Green</th>
        <th></th>
      </tr>

    <% @games3.each do |game| %>
      <tr>
        <td><%= game.owner %></td>
        <td><%= game.red %></td>
        <td><%= game.white %></td>
        <td><%= game.green %></td>
        <td><%= link_to 'Enter', game %></td>
      </tr>
    <% end %>
    </table>
  <% end %>
</div>
<div class="panel panel-default">
  <div class="panel-heading"><strong>4 player games</strong></div>
  <% if @games.size == 0 %>
    <div class="panel-body">
      No on going games found.
    </div>
  <% else %>
    <table class="table table-bordered">
      <tr>
        <th>Owner</th>
        <th>Red</th>
        <th>White</th>
        <th>Green</th>
        <th>Black</th>
        <th></th>
      </tr>

    <% @games.each do |game| %>
      <tr>
        <td><%= game.owner %></td>
        <td><%= game.red %></td>
        <td><%= game.white %></td>
        <td><%= game.green %></td>
        <td><%= game.black %></td>
        <td><%= link_to 'Enter', game %></td>
      </tr>
     <% end %> 

    </table>
  <% end %>
</div>
<% if @owner %>
  <%= link_to @owner.game_room, :class => "btn btn-default" do %>
      <span class='glyphicon glyphicon-arrow-left'></span> Back to games room
  <% end %>
<% else %>
  <%= link_to playerintro_path, :class => "btn btn-default" do %>
      <span class='glyphicon glyphicon-arrow-left'></span> Back to lobby
  <% end %>
<% end %>
</div>